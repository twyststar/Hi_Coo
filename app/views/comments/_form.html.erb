

<%= form_for [@hicoo, @comment], id: 'comment_form', remote: true do |f| %>
  <%= f.hidden_field :hicoo_id, :value => @hicoo.id %>
  <%= f.hidden_field :author, :value => current_user.profile.user_name %>
  <p><em>Comments are not restricted to Hi-coo format, however they must be under 250 characters.</em></p>
  <div class="form-group">
    <%= f.label :content  %>
    <%= f.text_area :content, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Record", class: "btn btn-danger" %>
  </div>

<% end %>

<%= link_to "Back", :back %>

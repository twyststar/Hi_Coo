<h2>New haiku</h2>

<%= form_for @hicoo, id: 'new_hicoo', remote: true do |f| %>
  <%= f.hidden_field :profile_id, :value => current_user.profile.id %>
  <%= f.hidden_field :author, :value => current_user.profile.user_name %>

  <div class="form-group">
    <p>Optional: add a pic to your coo</p>
    <%= f.label :pic  %>
    <%= f.file_field :pic %>
  </div>

  <div class="form-group">
    <p>Optional: add a title to your coo</p>
    <%= f.label :title  %>
    <%= f.text_field :title, autofocus: true, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <p>Required: first line, 5 syllables</p>
    <%= f.label :line_one  %>
    <%= f.text_field :line_one, autofocus: true, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <p>Required: second line, 7 syllables</p>
    <%= f.label :line_two  %>
    <%= f.text_field :line_two, autofocus: true, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <p>Required: third line, 5 syllables</p>
    <%= f.label :line_three  %>
    <%= f.text_field :line_three, autofocus: true, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.submit "Record", class: "btn btn-danger" %>
  </div>

<% end %>

<%= link_to "Back", :back %>

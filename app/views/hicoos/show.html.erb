

<div class="well">
  <h2><%= @hicoo.line_one %></h2>
  <h2><%= @hicoo.line_two %></h2>
  <h2><%= @hicoo.line_three %></h2>

<% if current_user.profile.id == @hicoo.profile_id %>
<%= link_to "Edit your Hi Coo", edit_hicoo_path(@hicoo) %>
<% end %>
<br>
<% if @hicoo.comments.any? %>
  <% @hicoo.comments.each do |comment| %>
    <br>
    <ul class="list-unstyled">
      <li><%= comment.content %></li>
      <li> -<%= comment.author %></li>
      <li><%= comment.created_at.strftime("%Y-%m-%d") %></li>
    </ul>
  <% end %>
<% end %>
</div>
